<div class="m-face-view">
	<div class="m-default">
		<div class="m-short">
			<span class="img u-imgorigin" title="点击查看原图"><img src="{faceshot_value}" alt=""></span>
		</div>
		<div class="m-info">
			<div class="m-details">
				<p class="item"><em>脸型作者：</em><span>{faceauthor_value}</span></p>
				<p class="item"><em>作者微博：</em>
					<em class="u-weibo" id="w-weibo">{author_wb_value}</em>
					<span class="u-weibo-win" id="w-weibo-win"><wb:follow-button uid="{author_wb_value}" type="red_1" width="67" height="24" ></wb:follow-button></span>
				</p>
			</div>
			<div class="m-star c-star-mini">
				<!-- 收藏 -->
				<a class="fav" href="home.php?mod=spacecp&ac=favorite&type=thread&id={tid}" id="k_favorite" onclick="showWindow(this.id, this.href, 'get', 0);">
					<i></i><em>收藏</em>
				</a>

				<!-- 点赞 -->
				<a class="zan" id="recommend_add" href="forum.php?mod=misc&action=recommend&do=add&tid={tid}" onclick="ajaxmenu(this, 3000, 1, 0, '43', 'recommendupdate(1)');return false;">
					<i></i><em>点赞</em>
				</a>
			</div>
			<div class="m-down">
				<a class="u-btn-facedown" href="{facedown_value}">点击下载</a>
				<span class="counts"><em>累计下载次数：</em><span>{facedown_downloads}</span></span>
				<span class="tips"><a href="javascript:;" onclick="showWindow('miscreport', 'misc.php?mod=report&url='+REPORTURL);return false;">无法下载或使用？<b>点击提交</b></a></span>
		
			</div>
			<div class="m-share">
				<span class="label">分享：</span>
				<div class="bdsharebuttonbox"><a href="#" class="bds_more" data-cmd="more"></a><a href="#" class="bds_tsina" data-cmd="tsina" title="分享到新浪微博"></a><a href="#" class="bds_weixin" data-cmd="weixin" title="分享到微信"></a><a href="#" class="bds_tieba" data-cmd="tieba" title="分享到百度贴吧"></a><a href="#" class="bds_copy" data-cmd="copy" title="分享到复制网址"></a><a href="#" class="bds_print" data-cmd="print" title="分享到打印"></a></div>
